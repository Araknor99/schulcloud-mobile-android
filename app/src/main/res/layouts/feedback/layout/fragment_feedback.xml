<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="70dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:clickable="true"
    android:paddingLeft="@dimen/bootstrap_alert_paddings"
    android:paddingRight="@dimen/bootstrap_alert_paddings"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/bootstrap_alert_paddings"
        android:textColor="@color/hpiRed"
        android:textSize="@dimen/text_title"
        android:text="@string/feedback_email" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailText"
        android:ems="10"
        android:layout_marginBottom="@dimen/bootstrap_alert_paddings"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginBottom="@dimen/bootstrap_alert_paddings"
        android:textColor="@color/hpiRed"
        android:textSize="@dimen/text_title"
        android:text="@string/feedback_opinion" />

    <EditText
        android:id="@+id/opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:ems="10"
        android:layout_marginBottom="@dimen/bootstrap_alert_paddings"
        android:inputType="textMultiLine" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/send_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opinion"
        android:layout_centerHorizontal="true"
        android:text="@string/feedback_send"
        android:layout_marginTop="@dimen/bootstrap_alert_paddings"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>


</RelativeLayout>