<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginTop="6dp"
                                    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/directory_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/hpiRed"
            android:textSize="@dimen/fa_icon_big"
            app:bootstrapBrand="danger"
            app:fontAwesomeIcon="fa_folder"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/directory_item_icon"
            android:layout_alignTop="@id/directory_item_icon"
            android:layout_toRightOf="@id/directory_item_icon"
            android:gravity="center"
            android:textColor="@color/hpiRed"
            android:textSize="@dimen/text_body"
            tools:text="Directory"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
