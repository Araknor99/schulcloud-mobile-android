<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.95"
    android:background="@color/gray">

    <TextView
        android:id="@+id/homeworkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="HomeworkName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/homeworkDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HomeworkDescription"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/homeworkName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/homeworkDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="167dp" />

    <TextView
        android:id="@+id/homeworkDuePlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/homeworkDue"
        android:layout_toLeftOf="@+id/homeworkDue"
        android:layout_toStartOf="@+id/homeworkDue"
        android:text="Abgabe bis: " />

</RelativeLayout>